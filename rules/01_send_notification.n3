# Add to the EventLog

PREFIX ex:   <http://example.org/>
PREFIX coar: <http://purl.org/coar/notify_vocabulary/>
PREFIX as:   <https://www.w3.org/ns/activitystreams#>
PREFIX rdf:  <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
PREFIX pol:  <https://www.example.org/ns/policy#>
PREFIX fno:  <https://w3id.org/function/ontology#>
PREFIX list: <http://www.w3.org/2000/10/swap/list#>

{
  # SCOPE this the subject of the input document 
  # use it as the top level notification identifier
  ?SCOPE a as:Offer .
  ?SCOPE a coar:ReviewRequest .

  ?SCOPE as:origin ?origin .
  ?SCOPE as:target ?target .
}
=>
{
  [ pol:policy [
      a fno:Execution ;
      fno:executes ex:sendNotification ;
      ex:notification [
        a as:Accept ;
        a coar:ReviewRequest ;
        as:inReplyTo ?SCOPE ;
        as:object ?SCOPE ;
        as:target ?origin ;
        as:origin ?target  
      ]
    ]
  ].
}.
